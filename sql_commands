CREATE TABLE EMPLOYEE
(
   EmpCode      INT NOT NULL,
   EmpFName     VARCHAR(15),
   EmpLName     VARCHAR(15),
   Job          VARCHAR(45),
   Manager      VARCHAR(4),
   HireDate     DATE,
   Salary       INT NOT NULL,
   Commission   INT NOT NULL,
   DEPTCODE     INT NOT NULL
);




