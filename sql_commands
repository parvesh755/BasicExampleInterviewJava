select MAX(salary) from employeess;

SELECT MAX(SALARY) FROM Employeess WHERE SALARY < (SELECT MAX(SALARY) FROM Employeess);

select * from CUSTOMERSS;
select * from ORDERSS;

SELECT * FROM CUSTOMERSS INNER JOIN ORDERSS ON CUSTOMERSS.ID = ORDERSS.CUSTOMER_ID;

SELECT * FROM CUSTOMERSS LEFT JOIN ORDERSS ON CUSTOMERSS.ID = ORDERSS.CUSTOMER_ID;

SELECT * FROM CUSTOMERSS RIGHT JOIN ORDERSS ON CUSTOMERSS.ID = ORDERSS.CUSTOMER_ID;

SELECT * FROM CUSTOMERSS FULL JOIN ORDERSS ON CUSTOMERSS.ID = ORDERSS.CUSTOMER_ID;


SELECT  ID, NAME, AMOUNT, CREATEDATE FROM CUSTOMERSS INNER JOIN ORDERSS ON CUSTOMERSS.ID = ORDERSS.CUSTOMER_ID;

SELECT  ID, NAME, AMOUNT, CREATEDATE FROM CUSTOMERSS LEFT JOIN ORDERSS ON CUSTOMERSS.ID = ORDERSS.CUSTOMER_ID;

SELECT  ID, NAME, AMOUNT, CREATEDATE FROM CUSTOMERSS RIGHT JOIN ORDERSS ON CUSTOMERSS.ID = ORDERSS.CUSTOMER_ID;

SELECT  ID, NAME, AMOUNT, CREATEDATE FROM CUSTOMERSS FULL JOIN ORDERSS ON CUSTOMERSS.ID = ORDERSS.CUSTOMER_ID;


SELECT  a.ID, b.NAME, a.SALARY FROM CUSTOMERSS a, CUSTOMERSS b WHERE a.SALARY < b.SALARY;
SELECT ID, NAME, SALARY FROM CUSTOMERSS;
SELECT ID, NAME, SALARY FROM CUSTOMERSS WHERE SALARY > 2000;

SELECT ID, NAME, SALARY FROM CUSTOMERSS WHERE NAME = 'Hardik' and id = 5;

SELECT ID, NAME, SALARY FROM CUSTOMERSS WHERE SALARY > 2000 AND age < 25;

SELECT ID, NAME, SALARY FROM CUSTOMERSS WHERE SALARY > 2000 OR age < 25;




UPDATE CUSTOMERSS SET ADDRESS = 'Pune' WHERE ID = 6;




UPDATE CUSTOMERSS SET ADDRESS = 'Pune', SALARY = 1000.00;

SELECT * FROM CUSTOMERSS LIMIT3;

select * from EMPLOYEE;

select * from DEPARTMENT;


SELECT E.EMPFNAME, E.EMPLNAME, E.DEPTCODE,
       D.DEPTNAME, D.LOCATION
       FROM EMPLOYEE E, DEPARTMENT D
       WHERE E.DEPTCODE = D.DEPTCODE
       ORDER BY E.EMPFNAME, D.LOCATION;
       
       
       
  SELECT SUM(COMMISSION+SALARY) AS "TOTAL SALARY" FROM EMPLOYEE GROUP BY EMPCODE;
  
 
 SELECT SUM(SALARY+COMMISSION) AS TOTALSALARY FROM EMPLOYEE WHERE JOB = 'ANALYST' AND DEPTCODE = 20;

SELECT AVG(Salary) AS AVG_SALARY, MIN(Salary) AS MINSALARY, MAX(Salary) AS MAXSALARY
FROM EMPLOYEE WHERE Job = 'ANALYST';

SELECT  DEPTCODE FROM Employee  GROUP BY DEPTCODE;
select * from employee;

SELECT * FROM Employee ORDER BY SALARY ASC;

SELECT * FROM Employee WHERE HIREDATE < '01-JAN-1981';

SELECT EMPCODE,
       EMPFNAME,
       SALARY,
       SALARY/30 DAILY_SAL
 FROM Employee
 ORDER BY SALARY*12;


